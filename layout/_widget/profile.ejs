<div class="widget-wrap">
  <div class="widget-title"><%= __('widget.author') %></div>
  <aside class="profile media widget">
    <figure class="profile-avatar media-left">
      <img src="<%=config.avatar %>" class="avatar" alt="<%=config.author %>">
    </figure>
    <div class="media-content">
      <p>
        <strong>
          <div><%=config.author %></div>
          <div>
            <% for (var contact of config.contact.filter(v => v.show)) { %>
              <span class="icon">
                <a href="<%- url_for(contact.url) %>" rel="author" target="_blank">
                  <i class="fa fa-<%=contact.icon %>"></i>
                </a>
              </span>
            <% } %>
          </div>
        </strong>
        <br>
        <span><%= config.author_title %></span>
      </p>
    </div>
  </aside>
</div>
